{% extends '/back/base.html.twig' %}

{% block title %}Modifier une location{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Modifier une location</h1>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.user) }}
            {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.date_debut) }}
            {{ form_widget(form.date_debut, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.date_fin) }}
            {{ form_widget(form.date_fin, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.status) }}
            {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.status) }}
        </div>
        <div class="form-group">
            {{ form_label(form.contentRents) }}
            {{ form_widget(form.contentRents, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
