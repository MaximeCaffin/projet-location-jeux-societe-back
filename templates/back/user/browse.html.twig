{% extends '/back/base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Liste des utilisateurs</h1>
        <a href="{{ path('app_back_user_create') }}" class="btn btn-success mb-3">Nouvel utilisateur</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in userList %}
                    <tr>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('app_back_user_read', {'id': user.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                            <a href="{{ path('app_back_user_edit', {'id': user.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
                            <a href="{{ path('app_back_user_delete', {'id': user.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}